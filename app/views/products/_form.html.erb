<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, "size" => 60 %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %><br />
    <%= f.text_field :manufacturer, "size" => 60 %>
  </div>
  <div class="field">
    <%= f.label :model_number %><br />
    <%= f.text_field :model_number, "size" => 60 %>
  </div>
  <div class="field">
    <%= f.label :part_number %><br />
    <%= f.text_field :part_number, "size" => 60 %>
  </div>
  <div class="field">
    <%= f.label :list_price %><br />
   $ <%= f.text_field :list_price %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
  	<%= f.select :category_id, Category.all.collect {|p| [ p.title, p.id ]} %>
  </div>
  <div class="field">
  	<%= f.label :vendor %><br />
  	<%= f.select :vendor_id, Vendor.all.collect {|p| [ p.company_name, p.id ]} %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
   <div class="field">
    <%= f.label :obsolete %><br />
    <%= f.check_box :obsolete %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
