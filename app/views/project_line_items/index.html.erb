<h1>Listing project_line_items</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Status</th>
    <th></th>
    <th><%= link_to image_tag("new.png"), new_project_line_item_path %></th>
    <th></th>
  </tr>

<% @project_line_items.each do |project_line_item| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= project_line_item.project_id %></td>
    <td><%= project_line_item.product_id %></td>
    <td><%= project_line_item.quantity %></td>
    <td><%= project_line_item.status %></td>
    <td><%= link_to 'Show', project_line_item %></td>
    <td><%= link_to 'Edit', edit_project_line_item_path(project_line_item) %></td>
    <td><%= link_to 'Destroy', project_line_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

